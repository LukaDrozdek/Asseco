@model IEnumerable<Asseco.Models.UserInformation>



 @if(Model.Count() > 0)
 {
    <div class="container">
        <div class="row">
            <div class="col-8">
                <h1 class="text-primary">List of user</h1>

            </div>
            <div class="col-4">
                <a asp-action="Create" class="btn btn-primary">Create new user</a>
            </div>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Lastname
                </th>
                <th>
                    E-mail
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Lastname
                    </td>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        <a type="submit" asp-route-id="@obj.Id" asp-action="Details" class="btn btn-primary w-100">Details</a>
                    </td>
                     <td>
                        <a type="submit" asp-route-id="@obj.Id" asp-action="Delete" class="btn btn-danger w-100">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
 }
 else
 {
     <div class="container">
        <div class="row">
            <div class="col-9">
                <h1 class="text-primary">List is empty</h1>
            </div>
            <div class="col-3">
                <a asp-action="Create" class="btn btn-primary">Create new user</a>
            </div>
        </div>
    </div>
 }
